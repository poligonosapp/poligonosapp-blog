<p id="notice"><%= notice %></p>

<h1>Polygons Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polygons_posts.each do |polygons_post| %>
      <tr>
        <td><%= polygons_post.title %></td>
        <td><%= polygons_post.body %></td>
        <td><%= link_to 'Show', polygons_post %></td>
        <td><%= link_to 'Edit', edit_polygons_post_path(polygons_post) %></td>
        <td><%= link_to 'Destroy', polygons_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

